<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    cardview:cardCornerRadius="16dp"
    android:layout_height="wrap_content"
   cardview:cardBackgroundColor="@color/white"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/base_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />




        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:layout_margin="16dp"
            android:id="@+id/purpose_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:hint="@string/purpose_message" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/send"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/send"
            app:layout_constraintTop_toBottomOf="@+id/purpose_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <com.google.android.gms.ads.AdView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:id="@+id/ad_view"
            android:layout_marginTop="16dp"
            ads:adSize="SMART_BANNER"
            android:gravity="center_horizontal"
            ads:adUnitId="ca-app-pub-6518181375956114/1797875713"

            ads:layout_constraintTop_toBottomOf="@+id/send"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
