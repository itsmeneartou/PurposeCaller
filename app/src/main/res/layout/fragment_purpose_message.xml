<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    cardview:cardBackgroundColor="@color/white"
    tools:context="com.purposecaller.purposecaller.activities.MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.purposecaller.purposecaller.activities.MainActivity">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:entries="@array/options"
            android:layout_margin="16dp"
            android:id="@+id/spinner"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:inputType="text"
            android:visibility="gone"
            android:layout_marginRight="16dp"
            android:id="@+id/purpose_edittext"
            android:hint="@string/purpose_message"/>

        <Spinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:entries="@array/topics"
            android:layout_margin="16dp"
            android:id="@+id/topics_spinner"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:inputType="phone"
            android:hint="@string/phoneNumber"
            android:layout_marginRight="16dp"
            android:id="@+id/phone_number_viewer"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
        <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_call_black_24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
        android:id="@+id/call"
        />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_games_black_24dp"
            android:layout_gravity="center"

            android:id="@+id/play_with_world"
            />
        ></LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
